			<unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
			<researchPrerequisite>PlateArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
		</recipeMaker>
		<graphicData>
			<texPath>Armor/Armor_spade_body_south</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.75</drawSize>
		</graphicData>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>320</costStuffCount>
		<statBases>
			<WorkToMake>17000</WorkToMake>
			<MaxHitPoints>290</MaxHitPoints>
			<Mass>25</Mass>
			<StuffEffectMultiplierArmor>0.85</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>1.0</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>1.0</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>15</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.2</MoveSpeed>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.05</SlaveSuppressionOffset>
		</equippedStatOffsets>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>SPADE_Casings</li>
				<li>SPADE_Manipulators</li>
				<li>SPADE_Actuators</li>

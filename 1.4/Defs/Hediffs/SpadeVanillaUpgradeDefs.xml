<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!-- eyes -->
	<RecipeDef ParentName="SurgerySpade">
		<defName>InstallSpadeBionicEye</defName>
		<label>install bionic eye</label>
		<description>Installs a bionic eye.</description>
		<jobString>Installing bionic eye.</jobString>
		<descriptionHyperlinks>
			<ThingDef>BionicEye</ThingDef>
			<HediffDef>BionicEye</HediffDef>
		</descriptionHyperlinks>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>BionicEye</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>BionicEye</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>SPADE_LightSensor</li>
		</appliedOnFixedBodyParts>
		<addsHediff>BionicEye</addsHediff>
	</RecipeDef>

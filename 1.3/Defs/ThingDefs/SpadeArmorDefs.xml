			<wornGraphicPath>Armor/Armor</wornGraphicPath>
			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<tags>
				<li>MedievalMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(0.33,0.33,0.33)</only>
				</li>
				<li>
					<weight>10</weight>
					<only>(0.65,0.65,0.65)</only>
				</li>
				<li>
					<weight>6</weight>
					<min>(0.3,0.3,0.3)</min>
					<max>(0.5,0.5,0.5)</max>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

	<ThingDef ParentName="ArmorMachineableBase">
		<defName>spade_Apparel_SpallLiner</defName>
		<label>spall liner</label>
		<description>A set of internal padding and light armor plates, designed to protect the internals from fragments and armor-piercing rounds. Slightly slows the drone down.</description>
		<techLevel>Industrial</techLevel>
		<recipeMaker>
			<researchPrerequisite>FlakArmor</researchPrerequisite>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
		</recipeMaker>
		<graphicData>
			<texPath>Armor/Tarp_spade_body_south</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.75</drawSize>
		</graphicData>
		<statBases>
			<WorkToMake>9000</WorkToMake>
			<MaxHitPoints>200</MaxHitPoints>
			<Mass>6</Mass>
			<Flammability>0.6</Flammability>
			<ArmorRating_Sharp>0.50</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.18</ArmorRating_Blunt>
			<ArmorRating_Heat>0.135</ArmorRating_Heat>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<Insulation_Cold>10</Insulation_Cold>
			<Insulation_Heat>10</Insulation_Heat>
			<StuffEffectMultiplierInsulation_Cold>0.26</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>

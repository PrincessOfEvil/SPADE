<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="ApparelBase">
		<defName>spade_ArcSidearm</defName>
		<label>arc sidearm</label>
		<description>A low range electric sidearm. Can be carried on a belt while leaving hands free for any other weapon.</description>
		<category>Item</category>
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponRanged/Autopistol</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<statBases>
			<WorkToMake>5000</WorkToMake>
			<Mass>1.2</Mass>
			<AccuracyTouch>0.80</AccuracyTouch>
			<AccuracyShort>0.70</AccuracyShort>
			<AccuracyMedium>0.40</AccuracyMedium>
			<AccuracyLong>0.30</AccuracyLong>
			<RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
		</statBases>
		<tickerType>Normal</tickerType>
		<thingCategories>
			<li>ApparelUtility</li>
		</thingCategories>
		<apparel>
			<scoreOffset>4</scoreOffset>
			<careIfWornByCorpse>false</careIfWornByCorpse>
			<careIfDamaged>false</careIfDamaged>
			<wearPerDay>0</wearPerDay>
			<bodyPartGroups>
				<li>Waist</li>
			</bodyPartGroups>
			<layers>
				<li>Belt</li>
			</layers>
		</apparel>
		<costList>
			<Steel>20</Steel>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>
		<recipeMaker>
			<researchPrerequisites>
				<li>MicroelectronicsBasics</li>
				<li>BlowbackOperation</li>
			</researchPrerequisites>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<recipeUsers>
				<li>TableMachining</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
		</recipeMaker>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<smeltable>true</smeltable>
		<burnableByRecipe>false</burnableByRecipe>
		<verbs>
			<li>
				<verbClass>SPADE.Verb_ShootStatic</verbClass>
				<commandIcon>Things/Item/Equipment/WeaponRanged/Autopistol</commandIcon>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>spade_Bullet_Arc</defaultProjectile>
				<warmupTime>0.3</warmupTime>
				<range>25.9</range>
				<soundCast>Shot_Autopistol</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
				<targetable>true</targetable>
				<onlyManualCast>true</onlyManualCast>
			</li>
		</verbs>
		<comps>
			<li Class="CompProperties_Art">
				<nameMaker>NamerArtWeaponGun</nameMaker>
				<descriptionMaker>ArtDescription_WeaponGun</descriptionMaker>
				<minQualityForArtistic>Excellent</minQualityForArtistic>
			</li>
			<li Class="CompProperties_Reloadable">
				<maxCharges>100</maxCharges>
				<hotKey>Misc4</hotKey>
				<chargeNoun>charge</chargeNoun>
				<displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
				<ammoDef>ComponentIndustrial</ammoDef>
				<ammoCountToRefill>1</ammoCountToRefill>
				<baseReloadTicks>600</baseReloadTicks>
				<soundReload>Standard_Reload</soundReload>
			</li>
		</comps>
	</ThingDef>
	<ThingDef ParentName="BaseBullet">
		<defName>spade_Bullet_Arc</defName>
		<label>arc bullet</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
